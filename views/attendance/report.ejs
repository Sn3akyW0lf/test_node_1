<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <%- include('../includes/header.ejs') %>
                </form>
                <div class="container text-bg-secondary rounded-2 p-2">
                    <center>
                        <h2 class="title">Attendance Records</h2>
                    </center>
                    <table class="table table-bordered rounded-2 p-2">
                        <thead>
                            <tr>
                                <th class="d-none">
                                    id
                                </th>
                                <th>
                                    Student Name
                                </th>
                                <th>
                                    Total Sessions
                                </th>
                                <th>
                                    Sessions Attended
                                </th>
                                <th>
                                    Attendance in %
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i = 0; i < names.length; i ++) { %>
                                <div>
                                    <tr class="<% if (percent[i] >= 90) { %>
                                        <%= 'table-info' %> <% } else if (percent[i] >= 75) { %>
                                            <%= 'table-success' %> <% } else if (percent[i] >= 50) { %>
                                                <%= 'table-warning' %> <% } else { %>
                                                    <%= 'table-danger' %> <% } %>">
                                        <td>
                                            <%= names[i] %>
                                        </td>
                                        <td>
                                            <%= total[i] %>
                                        </td>
                                        <td>
                                            <%= attended[i] %>
                                        </td>
                                        <td>
                                            <%= percent[i] %>
                                        </td>
                                    </tr>
                                </div>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                </div>
                <%- include('../includes/end.ejs'); %>