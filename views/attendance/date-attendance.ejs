<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <%- include('../includes/header.ejs') %>
                <!-- <a href="../views/attendance/report.html" class="btn btn-sm btn-primary p-3 m-3">Fetch Attendance Data</a> -->
                <div class="container text-bg-secondary rounded-2 p-2">
                    <center>
                        <h2 class="title">Attendace For Date -
                                <%= attends[0].attendance_date.toDateString() %></h2>
                    </center>
                    <table class="table table rounded-2 p-2">
                        <thead>
                            <tr> 
                                <th class="d-none">
                                    id
                                </th>
                                <th>
                                    Student Name
                                </th>
                                <th>
                                    Present / Absent
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let attendance of attends) { %>
                            <div>
                                <tr class="<% if (attendance.attendance == 'present') { %> <%= 'table-success' %> <% } else { %> <%= 'table-danger'%> <% } %>">
                                    <td>
                                        <%= attendance.name %>
                                    </td>
                                    <td>
                                        <% if (attendance.attendance == 'present') { %>
                                            <%= 'Present' %>
                                        <% } else { %>
                                            <%= 'Absent' %>
                                        <% } %>
                                    </td>
                                </tr>
                            </div>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                </div>

                <%- include('../includes/end.ejs'); %>